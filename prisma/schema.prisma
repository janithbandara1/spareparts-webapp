generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id            Int      @id @default(autoincrement())
  partNumber    String   @unique
  name          String
  description   String?
  price         Float
  quantity      Int      @default(0)
  imageUrl      String?
  condition     ItemCondition?
  brandId       Int?
  modelId       Int?
  brand         Brand?   @relation(fields: [brandId], references: [id])
  model         Model?   @relation(fields: [modelId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum ItemCondition {
  BRAND_NEW
  RECONDITIONED
  USED
}

model Brand {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  models      Model[]
  items       Item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Model {
  id          Int      @id @default(autoincrement())
  name        String
  brandId     Int
  brand       Brand    @relation(fields: [brandId], references: [id])
  items       Item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Admin {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroImage {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  altText     String   @default("Premium Auto Parts")
  publicId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}